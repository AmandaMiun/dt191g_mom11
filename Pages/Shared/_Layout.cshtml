@{
    var student = "Amanda Abrahamsson";
    var email = "amab@student.miun.se";

    var date = DateTime.Now.ToString("yyyy-mm-dd");
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inlämningsuppgift_11_razor</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Inlämningsuppgift_11_razor.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <img class="logo" src="~/logo.jpg" alt="logo">
        <p class="date" >Dagens datum är: @date</p>
    </header>

    <div class="mainContainer">
        <nav>
            <ul>
                <li class="navLi">
                    <a asp-area="" asp-page="/Index">Start</a>
                </li>
                <li class="navLi">
                    <a asp-area="" asp-page="/Razor">Razor</a>
                </li>
                <li class="navLi">
                    <a asp-area="" asp-page="/About">About</a>
                </li>
            </ul>
        </nav>

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
            <p>Av @student - Kontakta mig via epost: @email</p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>