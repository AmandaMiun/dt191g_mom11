@page
@model MyApp.Namespace.RazorModel
@{
    string[] courses = { "DT057G, Webbutveckling I", "DT093G, Webbutveckling II", "DT173G, Webbutveckling III", "DT084G, Introduktion till programmering i JavaScript", 
    "DT200G, Grafisk teknik för webb", "DT068G, Webbanvändbarhet", "DT003G, Databaser", "DT197G, Webbdesign för CMS", "IK060G, Projektledning", "DT193G, Fullstackutveckling med ramverk", 
    "DT162G, Webbutveckling med JavaScript" };

    var date = DateTime.Now;
    var day = date.DayOfWeek;
}

<h1>Razor</h1>
<h2>Kurser jag har läst:</h2>
<ul>
    @foreach(var course in courses) {
        <li>@course</li>
    }
</ul>

<h2>Idag</h2>
<p><b>Datum/klockslag: </b>@date</p>

@if(day == DayOfWeek.Monday) {
    <p>Idag är det måndag!</p>
} else {
    <p>Idag är det inte måndag!</p>
}


